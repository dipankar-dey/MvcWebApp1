@model IEnumerable<MyFirstMVCWebApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("NEW MOVIE","New","Movies", new { @class = "btn btn-success" })
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movieItem in Model)
        {
            <tr>
                <td>@Html.ActionLink(movieItem.Name,"Details","Movies",routeValues: new { Id = movieItem.Id },htmlAttributes:null) </td>
                <td>@movieItem.Genre.Name</td>
            </tr>
        }

    </tbody>
    
</table>

